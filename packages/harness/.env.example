# Target URL the agent navigates to first
TARGET_URL=http://pw-server:3001/admin/

# Widget server URL (from browser's perspective inside Docker)
PW_SERVER_URL=http://pw-server:3001

# App API key (register one via admin UI first, or leave empty)
PW_APP_KEY=

# Expose ports on host
SERVER_PORT=3001
BROWSER_MCP_PORT=8931

# --- Application container (opt-in via --profile app) ---
APP_IMAGE=nginx:alpine
APP_PORT=8080
APP_INTERNAL_PORT=80

# --- Harness self-registration ---
HARNESS_ID=docker-harness
HARNESS_NAME=Docker Harness
TARGET_APP_URL=http://pw-app:80
BROWSER_MCP_URL=http://pw-browser:8931/mcp
